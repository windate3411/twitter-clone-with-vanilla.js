@import './_color'
@import './_mixins'


* 
  margin 0
  padding 0
  font-family "Josefin Sans", sans-serif
  outline 0

html 
  font-size 62.5%

body 
  background #f0f8fd

// main page

.main-page
  width 100%
  height 100vh
  display grid
  grid-template-columns repeat(2,1fr)
  grid-template-rows 1fr min-content

  // left side
  .left
    grid-area 1/1/2/2
    background-color $main-color
    display flex
    justify-content center
    align-items center

    i
      font-size 3rem
      margin-right 2rem
    
    .left-content-heading
      font-size 2rem

    .list-item
      display flex
      align-items center
      margin 4rem
      color #fff
  // end of left side

  // right side form
  .right
    grid-area 1/2/2/-1
    position relative

    .right-content-form
      display flex
      justify-content center
      margin-top 3rem

      .btn-top
        width 8rem
        background-color #fff
        color $main-color
        border 0.1rem solid $main-color
        border-radius(3rem)
        cursor pointer
        font-size 1.4rem
        font-weight bold
        transition background-color 0.3s ease-in-out

        &:hover
          background-color: $button-hover-color-light

      input
        width 20rem
        height 4.5rem
        margin-right 1rem
        font-size 1.6rem
        padding 0 1rem
        border 0.1rem solid #ddd 
        border-radius(0.5rem)
        background-color #fff
        transition transform 0.1s ease-in

        &:focus, &:hover
          transform scale(1.05)
          background-color $button-hover-color-light


      .password-wrapper
        position relative

      label
        position absolute
        top 6rem
        left 0
        font-size 1.6rem
        font-weight 400
        color #a7a6a6 
    // end of right side form

    // right side middle content
    .middle-content
      position absolute 
      top 50%
      left 50%
      transform translate(-50%,-50%)
      display flex
      flex-direction column
      width 40%

      i
        font-size 4rem
        color $main-color
        margin-bottom 2rem

      h1 
        font-size 2rem
        margin-bottom 4rem
        line-height 4rem

      h4
        font-size 2rem
        margin-bottom 2rem

      button 
        margin 0.8rem 0
        padding 0.5rem
        border-radius(4rem)
        border .1rem solid $main-color
        font-size 1.6rem
        cursor pointer
        transition backgroud-color 0.3s ease-in

        &.sign-up 
          color #fff
          background-color $main-color

          &:hover
            background-color $button-hover-color-dark
        
        &.log-in
          background-color #fff

          &:hover
            background-color $button-hover-color-light
    // end of right side middle content

  // main-page-footer
  .main-page-footer
    grid-area 2/1/-1/-1
    background-color #f5f4f4
    padding 1.5rem
    border-top .1rem solid #ddd

    ul
      display flex
      justify-content center
      list-style none
      
      a
        font-size 1.6rem
        margin 0 2rem
        text-decoration none
        color #444
        font-weight 300
        transition color 0.3s ease-in

        &:hover
          color coral

  // end of main-page-footer

// end of main page

// login page
.login-page
  width 100%
  height 100vh
  display none
  grid-template-columns minmax(5rem, 1fr) 2fr minmax(5rem, 1fr)
  grid-template-rows repeat(2,min-content) 1fr
  grid-row-gap 1.5rem

  // login-page-nav
  .login-page-nav
    grid-area 1/1/2/-1
    background-color #fff
    padding 2.5rem 0
    box-shadow 0 0 0.3rem rgba(0,0,0,0.3)

    ul
      width 100rem
      margin auto
      display flex
      list-style none
      align-items flex-end
      
      li
        margin 0 1rem
        position relative

        &:last-child
          margin-left auto

        &::after
          content ''
          width 100%
          height 0.4rem
          background-color $main-color
          position absolute
          bottom -2.5rem
          left 0
          opacity 0
        
        &:hover
          transition opacity 0.3s ease-in
          
          &::after
            opacity 1

          a
            color $main-color

      a
        font-size 1.6rem
        text-decoration none
        color #555
        transition color 0.3s ease-in

      i
        color $main-color
        font-size 2rem

  // end of login-page-nav

  // login
  .login
    grid-area 2/2/3/3
    background-color #fff
    width 100rem
    display grid
    grid-template-columns 10rem 8fr
    grid-template-rows 2fr 1fr
    box-shadow 0 0 0 rgba(0,0,0,0.3)

    div
      margin-top 2rem

    .login-content
      grid-area 1/2/2/-1
      padding 5rem 0 1rem 0

      h2
        font-size 2.4rem
        margin-bottom 3rem

    .login-form
      display flex
      flex-direction column

      .login-form-checkbox
        transform: translateY(1.5px)

      label
        font-size 1.6rem
        font-weight 300
        margin-right 1rem
      
      a
        text-decoration none
        font-size 1.6rem
        color $main-color

      button
        padding 1rem 1.5rem
        background-color $main-color
        color #fff
        border-radius(4rem)
        border 0.1rem solid $main-color
        font-size 1.5rem
        font-weight bold
        margin-right 1rem
        cursor pointer 

      input:not(.login-form-checkbox)
        height 3.5rem
        width 25rem
        margin-bottom 1rem
        border .1rem solid #ddd
        border-radius(0.5rem)
        padding-left 1rem
        font-size 1.5rem
        transition background-color 0.3s ease-in

        &:focus, &:hover
          background-color $button-hover-color-light

    .login-footer
      grid-area 2/1/-1/-1
      background-color #edf3f7
      padding-left 10rem
      display flex
      flex-direction column
      justify-content center
      margin-top 2rem

      p
        font-size 1.6rem
        font-weight 300
        margin 0.5rem 0

      a
        text-decoration none
        font-size 1.6rem
        color $main-color

  // end of login

  // login modal
  .login-modal
    position fixed
    top 11.5rem
    left 50%
    transform translate(-50%, -50%)
    background-color #fff
    width 70rem
    padding 2rem
    text-align center
    box-shadow 0 0 .7rem rgba(0,0,0,0.3)
    border-radius 0 0 1rem 1rem
    font-size 1.6rem
    color $dark-gray
    display none

    i
      position absolute
      top 1.8rem
      right 2rem
      cursor pointer

  // end of login modal

// end of login page

// feeds page
.feeds-page
  width 100%
  height 100vh
  display none

  .feeds-nav
    position fixed
    width 100%
    height 6.5rem
    background-color #fff
    display flex
    justify-content center
    box-shadow 0 0 0.7rem rgba(0,0,0,0.3)

    .icons
      display flex
      align-items center

      a
        text-decoration none
        margin-right 6rem
        font-size 2.5rem
        color $light-gray-darken 

        &.active
          color $main-color
    
    .search-bar
      display flex
      align-items center
      position relative

      input
        width 35rem
        height 3rem
        border-radius(3rem)
        border 0.1rem solid $light-gray
        background-color $light-gray
        padding-left 5rem
        transition all 0.3s ease-in

        &:focus
          background-color #fff
          border-color $main-color

      i
        position absolute
        font-size 1.6rem
        left 1.5rem
        color $light-gray-darken 
    
    .user
      margin-left 3rem
      display flex
      align-items center
      cursor pointer

      .user-image-wrapper
        width 4rem
        height 4rem

        img
          roundedImg()

      a
        text-decoration none
        margin 0 1rem
        font-size 1.8rem
        color #444 
      
      i
        color #444
        font-size 1.6rem

  // feeds content
  .feeds-content
    display grid
    grid-template-columns minmax(5rem, 1fr) 60rem  40rem  minmax(5rem, 1fr)
    grid-template-rows repeat(2,min-content)
    padding-top 7rem

    .feeds-header
      grid-area 1/2/2/3
      background-color #fff
      margin-top 1.5rem

      .header-top
        display flex
        align-items center
        justify-content space-between
        grayBorderBottom()
        padding 1.5rem
        
        h4
          font-size 2.2rem
        
        i
          font-size 2rem
          color $main-color
      
      .header-post
        display flex
        align-items center
        grayBorderBottom()
        padding 1rem

        .header-image-wrapper
          width 4rem
          height 4rem
          margin-right 1.5rem

          img
            roundedImg()
        
        input
          width 35rem
          height 3rem
          border .1rem solid $light-gray
          border-radius(3rem)
          background-color $light-gray
          padding .4rem 1.5rem
          transition all 0.3s ease-in

          &:focus
            border 0.1rem solid $main-color
            background-color #fff
            color #222
        
        i
          font-size 2.5rem
          color $main-color
          margin 1rem
    
    // posts
    .posts
      grid-area 2/2/-1/3
      background-color #fff

      .post
        display flex
        padding 1.5rem
        grayBorderBottom()

        .user-avatar
          width 6rem
          height  6rem
          flex-shrink 0
          margin-right 1.5rem

        .post-content

          .post-user-info
            display flex
            margin 1rem 0
            align-items center
            font-size 1.6rem

            h4
              margin-right 0.5rem

            i
              color $main-color
              margin-right 0.5rem
          
          .post-text
            margin-bottom 1rem

          .post-icons
            margin-top 1rem

            i
              font-size 1.8rem
              color $dark-gray
              margin-right 6rem
              cursor pointer
              transition color 0.1s ease-in

              &:hover
                color $main-color
        
        img
          width 100%
          height 100%
          object-fit cover
          border-radius(50%)
        
        .post-img
          width 48rem
          height 30rem

          img
            border-radius(1rem)



    // end of posts

    // who to follow
    .follow
      position fixed
      top 8.3rem
      left 62%
      background-color #fff
      width 35rem

      .follow-heading
        font-size 1.8rem
        padding 1rem
        grayBorderBottom()

      .follow-user
        display flex
        align-items center
        padding 1.5rem
        grayBorderBottom()

        .follow-user-info
          font-size 1.6rem
          margin-bottom 0.5rem

        .follow-user-image
          width 6rem
          height 6rem
          margin-right 2rem

          img
            roundedImg()
        
        .follow-btn
          margin-left auto
          width 9rem
          background-color #fff
          color $main-color
          padding .7rem .5rem
          border .1rem solid $main-color
          border-radius(2rem)
          font-size 1.6rem

      .follow-link
        margin 2rem 1rem

        a
          text-decoration none
          color $main-color
          font-size 1.5rem

      .follow-footer
        background-color: #f0f8fd

        ul
          list-style none
          display flex
          padding 2rem 0 
    
        a
          text-decoration none
          color $dark-gray
          font-size 1.5rem
          margin 0 .7rem  
    // end of who to follow


  // end of feeds content

  .post-btn
    position fixed
    bottom 2rem
    left 70%
    width 10rem
    padding 1.5rem 1.2rem
    background-color $main-color
    color #fff
    font-size 1.6rem
    border .1rem solid $main-color
    border-radius(3rem)
    cursor pointer
    box-shadow 0 .3rem 1rem rgba(0,0,0,0.3)
    transition background-color 0.3s ease-in

    &:hover
      background-color #117abb 
  
  // post-modal
  .modal-wrapper
    position fixed
    background-color rgba(0,0,0,0.5)
    top 0
    right 0
    left 0
    bottom 0
    opacity 0
    visibility hidden
  
  .modal-wrapper-display
    opacity 1
    visibility visible

    .modal
      background-color #fff
      width 60rem
      position absolute
      left 50%
      top 25%
      transform translate(-50%, -50%)
      border-radius(1.5rem)
      display none

      .modal-header
        font-size 1.6rem
        padding 1.5rem 2.5rem
        display flex
        align-items center
        grayBorderBottom()

        i
          font-size 2.5rem
          color $main-color
          cursor pointer
        
        button 
          margin-left auto
          width 8rem
          padding .8rem .5rem
          background-color $main-color
          color #fff
          border-radius(1.5rem)
          border .1rem solid $main-color
          opacity 0.5
          cursor pointer

      .modal-body
        display flex
        padding 2rem 1.5rem 1rem 1.5rem

        .modal-img
          width 4rem
          height 4rem
          margin-right 1.5rem

          img
            roundedImg()

        .modal-input
          width 53rem
          padding 1rem 0 8rem 1rem
          background-color $light-gray
          border .1rem solid #eeeeee
          border-radius(1.5rem)
          font-size 1.6rem

          &:focus
            background-color #fff
            border-color $main-color
        
        i
          position absolute
          bottom 8.5rem
          right 2.8rem
          font-size 2rem
          color $main-color

      .modal-footer
        padding 0 2rem 2rem

        .modal-icons
          display flex
          align-items center

          i
            margin-right 2rem
            font-size 2.7rem
            color $main-color
            cursor pointer

          .modal-text-wrapper
            margin-left auto
          
            .modal-text-count
              font-size 1.2rem
              color: #222
              margin-left auto
              margin-right 1rem
            
            span
              font-size 5rem
              width 4rem
              height 4rem
              border .1rem solid $main-color
              border-radius(50%)
              display flex
              justify-content center
              align-items center
              color $main-color
              opacity .5
              cursor pointer
          

  // end of post-modal

  // sidebar
  .sidebar-wrapper
    position fixed
    background-color rgba(0,0,0,0.5)
    top 0
    right 0
    bottom 0
    left 0
    opacity 0
    visibility hidden
    transition all 0.5s

    .sidebar
      position fixed
      top 0
      right -30rem
      width 30rem
      height 100vh
      background-color #fff
      padding 2.5rem
      box-sizing border-box
      box-shadow -.1rem 0 .5rem rgba(0,0,0,0.5)
      transition right .5s cubic-bezier(1, 0, 0, 1)

      .sidebar-header
        display flex
        align-items center
        padding-bottom 1.5rem
        border-bottom .1rem solid #eee

        h2
          font-size 2rem
        
        i
          margin-left auto
          font-size 2.5rem
          color $main-color
          cursor pointer
      
      .sidebar-user
        display flex
        align-items center
        padding-top 1.5rem

        .side-user-img
          height 4rem
          width 4rem

          img
            roundedImg()

        span
          margin-left auto
          width 3.5rem
          height 3.5rem
          font-size 5rem
          border .1rem solid $main-color
          border-radius(50%)
          display flex
          justify-content center
          align-items center
          color $main-color

      .sidebar-user-info
        padding 1.5rem 0
        font-size 1.8rem

        h4
          margin-bottom .5rem

      .following
        display flex
        padding 1.5rem 0

        .following-paragraph
          font-size 1.5rem

          span
            font-weight bold

          &:first-child
            margin-right 2.5rem 

      .sidebar-list-1, .sidebar-list-2
        border-bottom .1rem solid #eee

        ul
          list-style none
          padding 1.5rem

          li
            margin-bottom 2.5rem

            a
              text-decoration none
              font-size 1.6rem
              color $dark-gray

              i
                margin-right 1rem

    .sidebar-display
      right 0
                  
  .sidebar-wrapper-display
    opacity 1
    visibility visible

  // dark  mode

  .dark-mode
    display flex
    align-items center
    margin-top 1rem
    
    p
      margin-right 8rem
      font-size 1.6rem
      color $dark-gray

    .toggle
      background-color #777
      height 1.5rem
      width 4.5rem
      border-radius(3rem)
      position relative
      box-shadow inset 0 .2rem 1rem rgba(0,0,0,0.3)

      .circle
        width 2.1rem
        height 2.1rem
        border-radius(50%)
        background-color #ddd
        position absolute
        top 50%
        left -1px
        transform translateY(-50%)
        box-shadow  0 .1rem .3rem rgba(0,0,0,0.3)
        transition all 0.1s linear

      .move
        left 2.4rem
        background-color: #117abb

  .dark-1
    background-color #1c2938 !important
  
  .dark-2
    background-color #10171e !important
  
  .light
    color #fff !important
  
  .border-color
    border-color #444 !important
  // end of dark mode
  // end of sidebar  

// end of feeds page

// RWD
@media(max-width: 1600px)
  // new feeds page
  .follow
    left 58.5%

@media(max-width: 1300px)

  // main page
  .middle-content
    width 60%
  
  .main-page-footer ul
    flex-wrap wrap

    li
      margin-bottom 1rem

@media(max-width: 1100px)
  // main page
  .main-page
    grid-template-columns 1fr
    grid-template-rows repeat(2,fr) min-content 

    .right
      grid-area 1/1/2/2
      width 70%
      margin auto

      .right-content-form
        display none
    
    .left
      grid-row 2/3

      .left-content
        width 50%
        margin auto

        h3
          line-height 3rem
    
    .main-page-footer
      grid-row 3/4

  // login page
  .login-page-nav ul, .login
    width 80rem !important

  .login-modal
    width 60rem !important

  // new feeds page
  .feeds-content
    grid-template-columns minmax(5rem,1fr) 2fr minmax(5rem,1fr) !important

  .search-bar
    display none !important

  .follow
    display none

  .post-btn
    left: 85% !important

@media(max-width: 900px)
  // login page
  .login-page-nav ul, .login
    width 60rem !important

  .login-modal
    width 50rem !important

@media(max-width: 800px)
  // main page
  .right
    width 80% !important

  .middle-content

    h1
      margin-bottom 2rem !important
    
    h4
      margin-bottom 1rem !important
    i
      display none

  .left-content
    width 60% !important

@media(max-width: 700px)
  // login page
  .login-page-nav ul, .login
    width 50rem !important

  .login-modal
    width 40rem !important

  // new feeds page
  .user a
  .user i
    display none  
  
  .feeds-content
    grid-template-columns 1fr !important

    .feeds-header, .posts
      grid-column 1/-1 !important
    
  .modal
    width 90% !important
    
    .modal-img
      flex-shrink 0 !important

  .post-btn
    left: 75% 
    font-size 1.8rem !important
  
  .sidebar-list-1 li
  .sidebar-list-2 li
    margin-bottom 1.5rem !important

@media(max-width: 600px)
  // main page
  .main-page
    grid-template-rows 1fr min-content !important

  .left
    display none !important

  .right
    grid-row 1/2
    width 90%

  // login page
  .login-page-nav ul, .login
    width 40rem !important

  .login
    grid-template-columns 5rem 8fr !important

    label, a
      font-size 1.4rem !important
    
    .login-footer
      padding-left 5rem !important
      font-size 1.4rem !important
  
  .login-modal
    width 30rem !important

    p 
      font-size 1.4rem !important
    i
      top 2.5rem !important

  // new feeds page

  .header-post input
    width 27rem !important

  .post-text
    width 90% !important

  .post-img
    width 90% !important
    height 25rem !important

  .post-btn
    left 70% !important

@media(max-width: 500px)
  // main page
  .middle-content h1
    font-size 2.5rem

  // login page
  .login-page-nav ul, .login
    width 30rem

  .login
    grid-template-columns 2rem 8fr

    .login-form
      a
        display block
        margin-top 1rem

      input:not(.login-form-checkbox)
        width 20rem !important
    
    .login-footer
      padding-left 2rem
// end of RWD