@import './_color'

* 
  margin 0
  padding 0
  font-family "Josefin Sans", sans-serif
  outline 0

html 
  font-size 62.5%

body 
  background #f0f8fd

// main page

.main-page
  width 100%
  height 100vh
  display none
  grid-template-columns repeat(2,1fr)
  grid-template-rows 1fr min-content

  // left side
  .left
    grid-area 1/1/2/2
    background-color $main-color
    display flex
    justify-content center
    align-items center

    i
      font-size 3rem
      margin-right 2rem
    
    .left-content-heading
      font-size 2rem

    .list-item
      display flex
      align-items center
      margin 4rem
      color #fff
  // end of left side

  // right side form
  .right
    grid-area 1/2/2/-1
    position relative

    .right-content-form
      display flex
      justify-content center
      margin-top 3rem

      .btn-top
        width 8rem
        background-color #fff
        color $main-color
        border 0.1rem solid $main-color
        border-radius 3rem
        cursor pointer
        font-size 1.4rem
        font-weight bold
        transition background-color 0.3s ease-in-out

        &:hover
          background-color: $button-hover-color-light

      input
        width 20rem
        height 4.5rem
        margin-right 1rem
        font-size 1.6rem
        padding 0 1rem
        border 0.1rem solid #ddd 
        border-radius 0.5rem
        background-color #fff
        transition transform 0.1s ease-in

        &:focus, &:hover
          transform scale(1.05)
          background-color $button-hover-color-light


      .password-wrapper
        position relative

      label
        position absolute
        top 6rem
        left 0
        font-size 1.6rem
        font-weight 400
        color #a7a6a6 
    // end of right side form

    // right side middle content
    .middle-content
      position absolute 
      top 50%
      left 50%
      transform translate(-50%,-50%)
      display flex
      flex-direction column
      width 40%

      i
        font-size 4rem
        color $main-color
        margin-bottom 2rem

      h1 
        font-size 2rem
        margin-bottom 4rem
        line-height 4rem

      h4
        font-size 2rem
        margin-bottom 2rem

      button 
        margin 0.8rem 0
        padding 0.5rem
        border-radius 4rem
        border .1rem solid $main-color
        font-size 1.6rem
        cursor pointer
        transition backgroud-color 0.3s ease-in

        &.sign-up 
          color #fff
          background-color $main-color

          &:hover
            background-color $button-hover-color-dark
        
        &.log-in
          background-color #fff

          &:hover
            background-color $button-hover-color-light
    // end of right side middle content

  // main-page-footer
  .main-page-footer
    grid-area 2/1/-1/-1
    background-color #f5f4f4
    padding 1.5rem
    border-top .1rem solid #ddd

    ul
      display flex
      justify-content center
      list-style none
      
      a
        font-size 1.6rem
        margin 0 2rem
        text-decoration none
        color #444
        font-weight 300
        transition color

        &:hover
          color coral

  // end of main-page-footer

// end of main page

// login page
.login-page
  width 100%
  height 100vh
  display none
  grid-template-columns minmax(5rem, 1fr) 2fr minmax(5rem, 1fr)
  grid-template-rows repeat(2,min-content) 1fr
  grid-row-gap 1.5rem

  // login-page-nav
  .login-page-nav
    grid-area 1/1/2/-1
    background-color #fff
    padding 2.5rem 0
    box-shadow 0 0 0.3rem rgba(0,0,0,0.3)

    ul
      width 100rem
      margin auto
      display flex
      list-style none
      align-items flex-end
      
      li
        margin 0 1rem
        position relative

        &:last-child
          margin-left auto

        &::after
          content ''
          width 100%
          height 0.4rem
          background-color $main-color
          position absolute
          bottom -2.5rem
          left 0
          opacity 0
        
        &:hover
          transition opacity 0.3s ease-in
          
          &::after
            opacity 1

          a
            color $main-color

      a
        font-size 1.6rem
        text-decoration none
        color #555
        transition color 0.3s ease-in

      i
        color $main-color
        font-size 2rem

  // end of login-page-nav

  // login
  .login
    grid-area 2/2/3/3
    background-color #fff
    width 100rem
    display grid
    grid-template-columns 10rem 8fr
    grid-template-rows 2fr 1fr
    box-shadow 0 0 0 rgba(0,0,0,0.3)

    div
      margin-top 2rem

    .login-content
      grid-area 1/2/2/-1
      padding 5rem 0 1rem 0

      h2
        font-size 2.4rem
        margin-bottom 3rem

    .login-form
      display flex
      flex-direction column

      label
        font-size 1.6rem
        font-weight 300
        margin-right 1rem
      
      a
        text-decoration none
        font-size 1.6rem
        color $main-color

      button
        padding 1rem 1.5rem
        background-color $main-color
        color #fff
        border-radius 4rem
        border 0.1rem solid $main-color
        font-size 1.5rem
        font-weight bold
        margin-right 1rem
        cursor pointer 

      input:not(.login-form-checkbox)
        height 3.5rem
        width 30rem
        margin-bottom 1rem
        border .1rem solid #ddd
        border-radius 0.5rem
        padding-left 1rem
        font-size 1.5rem
        transition background-color 0.3s ease-in

        &:focus, &:hover
          background-color $button-hover-color-light

    .login-footer
      grid-area 2/1/-1/-1
      background-color #edf3f7
      padding-left 10rem
      display flex
      flex-direction column
      justify-content center
      margin-top 2rem

      p
        font-size 1.6rem
        font-weight 300
        margin 0.5rem 0

      a
        text-decoration none
        font-size 1.6rem
        color $main-color

  // end of login

// end of login page

// feeds page
.feeds-page
  width 100%
  height 100vh

  .feeds-nav
    position fixed
    width 100%
    height 6.5rem
    background-color #fff
    display flex
    justify-content center
    box-shadow 0 0 0.7rem rgba(0,0,0,0.3)

    .icons
      display flex
      align-items center

      a
        text-decoration none
        margin-right 6rem
        font-size 2.5rem
        color #9e9a9a

        &.active
          color $main-color
    
    .search-bar
      display flex
      align-items center
      position relative

      input
        width 35rem
        height 3rem
        border-radius 3rem
        border 0.1rem solid #d6e1e9
        background-color #d6e1e9
        padding-left 5rem
        transition all 0.3s ease-in

        &:focus
          background-color #fff
          border-color $main-color

      i
        position absolute
        font-size 1.6rem
        left 1.5rem
        color #9e9a9a
    
    .user
      margin-left 3rem
      display flex
      align-items center
      cursor pointer

      .user-image-wrapper
        width 4rem
        height 4rem

        img
          width 100%
          height 100%
          object-fit cover
          border-radius 50%

      a
        text-decoration none
        margin 0 1rem
        font-size 1.8rem
        color #444 
      
      i
        color #444
        font-size 1.6rem

  // feeds header
  
  // end of feeds header

// end of feeds page